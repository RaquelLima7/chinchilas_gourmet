<div class="container my-5">
  <div class="card d-flex p-4">
    <div class="">
      <h4> <%= @product.name %> </h4>
    </div>
    <div class="d-flex">
      <% if @product.photo.present? %>
        <%= cl_image_tag @product.photo.key, class: "img-show" %>
       <% else %>
        <%= image_tag('image.gif') %>
      <% end %>
      <p class="text-justify mt-5"> <%= @product.description %>
      <br>
      <br>
      <span> <strong>R$ <%= @product.price %> </strong></span></p>
    </div>


    <div class="d-flex justify-content-end">
      <small> <em class="text-muted"> Produto adicionado por <%= @product.user.name %> </em></small>
    </div>

    <div class="d-flex justify-content-end mt-3">
      <% if policy(@product).edit? %>
        <%= link_to edit_product_path(@product.id) do %>
          <i class="fas fa-pencil-alt ml-4 mr-4"></i>
        <% end %>
      <% end %>
      <% if policy(@product).destroy? %>
        <%= link_to product_path(@product), method: :delete, data: { confirm: "Deseja excluir esse produto?"} do %>
          <i class="fa fa-trash"></i>
        <% end %>
      <% end %>
    </div>
    
  </div>
</div>