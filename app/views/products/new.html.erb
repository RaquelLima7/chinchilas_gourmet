<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Adicione um produto</h3>
        <%= simple_form_for @product do |f| %>
          <%= f.input :name, placeholder: 'Digite o nome do produto.' %>
          <%= f.input :description, placeholder: 'Digite uma descrição.' %>
          <%= f.input :price, placeholder: 'Informe o valor' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
