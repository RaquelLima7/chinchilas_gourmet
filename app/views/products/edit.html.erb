<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edite o produto</h3>
        <%= simple_form_for @product do |f| %>
          <%= f.input :name, placeholder: 'Digite um novo nome para o produto.' %>
          <%= f.input :description, placeholder: 'Digite uma nova descrição.' %>
          <%= f.input :price, placeholder: 'Informe um novo valor' %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>