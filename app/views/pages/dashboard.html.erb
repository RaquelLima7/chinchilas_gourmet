<div class="container mt-5 col-sm-12 col-md-8 col-lg-6">
  <div class="d-flex justify-content-start">
    <% if current_user.name.present? %> 
      <h1> Bem-vindo <%= current_user.name %></h1>
    <% else %>
      <h1> Bem-vindo <%= current_user.email %></h1>
    <% end %>
  </div>

  <div class="d-flex justify-content-start">
  <%= link_to "Edite seu perfil", edit_registration_path(current_user), class: "btn btn-primary mr-3" %>
  <%= link_to "Delete sua conta", registration_path(current_user), class: "btn btn-danger mr-3", method: :delete, data: { confirm: "Are you sure?"} %>
  </div>
</div>
<hr>

<div class="container">
  <h2>Seus Produtos:</h2>
  <div class=" mt-5">
    <div class="d-flex justify-content-around">
      <% @products.each do |product| %>
        <div class="col-sm-12 col-md-3 col-lg-4">
          <div class="card" style="width: 18rem;">
            <% if product.photo.present? %>
              <%= cl_image_tag product.photo.key, class: "card-img-top" %>
            <% else %>
              <%= image_tag('image.gif')%>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"> <%= product.name %></h5>
              <p class="card-text">R$ <%= product.price %></p>
              <%= link_to "Veja a descrição", product, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>